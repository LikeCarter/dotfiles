// Place your key bindings in this file to override the defaults
[
    {
        "key": "cmd+i",
        "command": "composerMode.agent"
    },
    {
        "key": "ctrl+d",
        "command": "workbench.files.action.showActiveFileInExplorer"
    },
    {
        "key": "ctrl+s",
        "command": "filesExplorer.findInWorkspace",
        "when": "!searchInputBoxFocus"
    },
    {
        "key": "ctrl+s",
        "command": "search.action.focusSearchList",
        "when": "searchInputBoxFocus"
    },
    {
        "key": "cmd+1",
        "command": "workbench.action.openEditorAtIndex1"
    },
    {
        "key": "cmd+2",
        "command": "workbench.action.openEditorAtIndex2"
    },
    {
        "key": "cmd+3",
        "command": "workbench.action.openEditorAtIndex3"
    },
    {
        "key": "cmd+4",
        "command": "workbench.action.openEditorAtIndex4"
    },
    {
        "key": "cmd+5",
        "command": "workbench.action.openEditorAtIndex5"
    },
    {
        "key": "cmd+6",
        "command": "workbench.action.openEditorAtIndex6"
    },
    {
        "key": "cmd+7",
        "command": "workbench.action.openEditorAtIndex7"
    },
    {
        "key": "cmd+8",
        "command": "workbench.action.openEditorAtIndex8"
    },
    {
        "key": "cmd+9",
        "command": "workbench.action.openEditorAtIndex9"
    },
    {
        "key": "ctrl+=",
        "command": "editor.action.goToTypeDefinition",
        "when": "editorTextFocus"
    },
    {
        "key": "alt+down",
        "command": "runCommands",
        "args": {
            "commands": [
                "cursorDown",
                "editor.gotoNextFold"
            ]
        },
        "when": "editorTextFocus"
    },
    {
        "key": "alt+up",
        "command": "runCommands",
        "args": {
            "commands": [
                "cursorUp",
                "editor.gotoPreviousFold"
            ]
        },
        "when": "editorTextFocus"
    },
    {
        "key": "shift+alt+down",
        "command": "runCommands",
        "args": {
            "commands": [
                "cursorLineEndSelect",
                "editor.action.selectFromAnchorToCursor"
            ]
        },
        "when": "editorTextFocus && selectionAnchorSet"
    },
    {
        "key": "shift+alt+down",
        "command": "runCommands",
        "args": {
            "commands": [
                "cursorLineStart",
                "editor.action.setSelectionAnchor",
                "cursorDown",
                "editor.gotoNextFold"
            ]
        },
        "when": "editorTextFocus && !selectionAnchorSet"
    },
    {
        "key": "shift+alt+up",
        "command": "runCommands",
        "args": {
            "commands": [
                "cursorLineStartSelect",
                "editor.action.selectFromAnchorToCursor"
            ]
        },
        "when": "editorTextFocus && selectionAnchorSet"
    },
    {
        "key": "shift+alt+up",
        "command": "runCommands",
        "args": {
            "commands": [
                "cursorLineEnd",
                "editor.action.setSelectionAnchor",
                "cursorUp",
                "editor.gotoPreviousFold"
            ]
        },
        "when": "editorTextFocus && !selectionAnchorSet"
    },
    {
        "key": "ctrl+f",
        "command": "actions.find",
    },
    {
        "key": "ctrl+r",
        "command": "deleteWordRight",
        "when": "editorFocus"
    },
    {
        "key": "ctrl+l",
        "command": "deleteWordLeft",
        "when": "editorFocus"
    },
    {
        "key": "ctrl+shift+r",
        "command": "deleteAllRight",
        "when": "editorFocus"
    },
    {
        "key": "ctrl+shift+l",
        "command": "deleteAllLeft",
        "when": "editorFocus"
    },
    {
        "key": "ctrl+shift+g",
        "command": "cursorBottom",
        "when": "editorFocus"
    },
    {
        "key": "ctrl+v",
        "command": "runCommands",
        "args": {
            "commands": [
                "cursorHome",
                "cursorEndSelect"
            ]
        },
        "when": "editorFocus"
    },
    {
        "key": "ctrl+shift+v",
        "command": "runCommands",
        "args": {
            "commands": [
                "cursorHome",
                "cursorEndSelect"
            ]
        },
        "when": "editorFocus"
    },
    {
        "key": "ctrl+o",
        "command": "runCommands",
        "args": {
            "commands": [
                "workbench.action.gotoSymbol",
            ]
        },
        "when": "editorTextFocus"
    },
    {
        "key": "ctrl+u",
        "command": "runCommands",
        "args": {
            "commands": [
                "cursorLineStart",
                "editor.action.insertLineBefore"
            ]
        },
        "when": "editorTextFocus"
    },
    {
        "key": "ctrl+enter",
        "command": "runCommands",
        "args": {
            "commands": [
                "cursorEnd",
                "editor.action.insertLineAfter"
            ]
        },
        "when": "editorTextFocus"
    },
    {
        "key": "ctrl+a",
        "command": "cursorHome",
        "when": "editorTextFocus"
    },
    {
        "key": "cmd+enter",
        "command": "explorer.openAndPassFocus",
        "when": "filesExplorerFocus && !inputFocus"
    },
    {
        "key": "ctrl+[",
        "command": "editor.fold",
    },
    {
        "key": "ctrl+]",
        "command": "editor.unfold",
    },
    {
        "key": "alt+down",
        "command": "search.focus.nextInputBox",
        "when": "searchInputBoxFocus || searchViewletFocus"
    },
    {
        "key": "alt+up",
        "command": "search.focus.previousInputBox",
        "when": "searchInputBoxFocus || searchViewletFocus"
    },
    {
        "key": "cmd+enter",
        "command": "runCommands",
        "args": {
            "commands": [
                "closeFindWidget",
                "editor.action.smartSelect.expand"
            ]
        },
        "when": "findWidgetVisible"
    },
    {
        "key": "cmd+enter",
        "command": "runCommands",
        "args": {
            "commands": [
                "search.action.openResult",
                "editor.action.smartSelect.expand"
            ]
        },
        "when": "searchResultListFocused"
    },
    {
        "key": "ctrl+m",
        "command": "editor.action.smartSelect.expand",
    },
    {
        "key": "ctrl+t",
        "command": "cursorTop",
    },
    {
        "key": "ctrl+b",
        "command": "cursorBottom",
    },
]
